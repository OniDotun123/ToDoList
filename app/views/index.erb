
  <% if logged_in?%>
  <div class="main-body">
  <div class="welcome">
    <h1>Manage To-do List</h1>
    <blockquote >
      To add Tasks to your todo-list click on the title to add Tasks
    </blockquote>
  </div>

    <% if @lists%>
    <div class="todo-list">
      <ul class="lists">
        <% @lists.each do |list|%>
          <li>
            <div class="btn-edit list-btn">
              <a id="lists-edit" href="/lists/<%= list.id%>/edit"><img src="images/settings.png" width='12' height="12" alt=""></a>
            </div>
            <div class="btn-delete list-btn">
              <form action="/lists/<%= list.id%>" method="post">
                <input type="hidden" name="_method" value="delete">
                  <button type="submit">X</button>
              </form>
            </div>
            <h3 class="list-header"><a href="list/<%=list.id%>"><%= list.name %></a></h3>
            <ul class="tasks">
              <%list.tasks.limit(3).each do |task|%>
              <li><%= task.description%></li>
              <%end%>
            </ul>
          </li>
          <%end%>
      </ul>
    </div>
  </div>
    <%end%>
  <!-- else show form -->
  <% else %>
  <%= erb :"_login" %>
  <% end %>
