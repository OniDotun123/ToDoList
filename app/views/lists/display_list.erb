<div class="container">
  <h3><%= @list.name %></h3>By: <%= @list.user.username %><br>Created: <%= @list.created_at.strftime("%b %d, 20%y") %><br>
  <h4><%= @list.description %></h4>
<% if current_user %>
<% if @list.user.id == current_user.id %>
<form method="post" action="/lists/<%=@list.id%>">
  <input type="hidden" name="_method" value="delete"/>
  <br><button type="submit">Delete List</button>
  </form>
  <h4>Add task:</h4>
  <form action="/tasks/new" method="post">
    <label for="task">Task:</label>
    <input type="text" name="task[description]">
    <br>
    <input type="hidden" name="task[list_id]" value="<%= @list.id %>">
    <br><br><button type="submit">Add Task</button>
  </form>
  <% end %>
<% end %>
<ul class="tasks-list">
    <h4>Tasks:</h4>
    <% @tasks.each do |task| %>
      <%= erb :'/lists/display_tasks', locals: {task: task, list: @list} %>
    <% end %>
</ul>
