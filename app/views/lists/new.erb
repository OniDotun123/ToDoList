<div class='container'>
    <div>
      <h3 id='new-header'>Create a new list:</h3>
    </div>

    <% if @errors %>
      <p>Please fix the following errors:</p>
          <% @errors.each do |error| %>
          <li><%= error %></li>
          <% end %>
    <% end %>

    <div>
      <form class='new-list-form' action='/lists' method='post'>
      <input type="text" name="list[title]" placeholder="List Title">
      <input type="hidden" name="list[user_id]" value="<%= current_user.id %>">
      <input type="submit" value="Create" >
      </form>
    </div>
</div>
