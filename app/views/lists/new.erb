<div class="container">

  <h1><a href='/'>Create your new List!</a><h1>

  	<div class="errors">
	  	<% if @errors %>
	    <% @errors.each do |error| %>
	      <ul>
	        <li><%= error %></li>
	      </ul>
	      <% end %>
	    <% end %>
    </div>

	<form id="new_list" action="/lists" method="POST">
		<input type="hidden" name="list[user_id]" value="<%= current_user.id %>">
		<div class="row title">
			<input type="text" name="list[title]" placeholder="Title"> </div>
		<input type="submit" name="" value="Create List">
	</form>
</div>