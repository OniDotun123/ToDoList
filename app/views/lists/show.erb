<div class='container'>
<h3>Here's your current tasks for the <%= @list.title %> list :</h3>

<div >
  <button id='task-button'><span><a href="/tasks/new">Create Task</a></span></button>
</div>
  <table align="center">
    <tr>
      <th>Task Name</th>
      <th>Task Description</th>
      <th>Task Status</th>
      <th>Date Created</th>
    </tr>
      <% @list.tasks.each do |task| %>
    <tr>
      <td><%= task.name %>
        <a href='/lists/<%=@list.id%>/tasks/<%=task.id %>/edit'><button>Edit</button></a>
        <form action='/lists/<%=@list.id %>/tasks/<%= task.id %>' method="post">
          <input name="_method" type="hidden" value="delete">
          <input type="submit" value="Delete">
        </form>
      </td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= task.created_at %></td>
    </tr>
      <% end %>
  </table>
</div>
