<div class='container'>
	<h1>all ToDoLists</h1>

	<% if logged_in? %>
		<h3 id="create_list" ><a href="/lists/new">Add a List</a></h3>
	<% end %>

	<div class="comment_form">

	  <h1>Create your new List!<h1>

		<%= erb :'_errors', locals: {errors: @errors} %>

		<form id="new_list" action="/lists" method="POST">
			<input type="hidden" name="list[user_id]" value="<%= current_user.id %>">
			<div class="row title">
				<input type="text" name="list[title]" placeholder="Title"> </div>
			<input type="submit" name="" value="Create List">
		</form>
	</div>

	<ol class="create_list">
		<% @lists.each do |list| %>
			<%= erb :'lists/_list', locals: {list: list} %>
		<% end %>
	</ol>

	<% 30.times do %>
		<br>
	<% end %>

</div>
