<div class="container">
  <div>
    <h1 id="profile_title"> <%=@user.username %>'s Profile Page </h1>
  </div>

  <div>
    <h2> Lists </h2>
    <% if @lists %>
      <% @lists.each do |list| %>
        <h3><%= list.title %>
          <% if @user.id == current_user %>
          <a href="/lists/<%=list.id%>">Edit</a>
          <a href="/lists/<%=list.id%>/edit">Edit This</a>
          <% end %> </h3>
        <ul>
          <% list.tasks.each do |task| %>
            <li><%=task.body%>:

              <% if task.completed %>
                Complete!!!
              <% end%>
            </li><br>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
