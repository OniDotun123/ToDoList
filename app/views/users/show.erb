<% @user = User.find(current_user) %>
<% @user.lists.each do |list| %>
<div class='container'>
<h3>Here's your current todo lists:</h3>
  <table align="center">
    <tr>
      <th>List Name</th>
      <th>Total Tasks</th>
      <th>Completed Tasks</th>
      <th>Date Created</th>
    </tr>
    <tr>
      <td><a href='/lists/<%=list.id%>'><%= list.title %></a></td>
      <td><%= list.tasks.count %></td>
      <td><%= list.tasks.where(status: true).count%></td>
      <td><%= list.created_at %></td>
    </tr>
  </table>
</div>
<% end %>
